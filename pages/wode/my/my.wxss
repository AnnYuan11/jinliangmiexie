/* pages/wode/my/my.wxss */
.bg_box{
  width: 100%;
  position: relative;
}
.bg_box image{
  width:750rpx;
}
.zc{
  position: absolute;
  left: 7rpx;
  top:15%;
}
.zc .dl{
  font-size:36rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: block;
}
.zc .content{
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.list{
  width: 100%;
  padding: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.lis{
  width: 100%;
  margin: 30rpx 0;
}
.lis image{
  vertical-align: middle;
}
.lis text{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 17rpx;
}
.lis .jt{
  float: right;
  margin-top: 16rpx;
}
.line{
  width:688rpx;
  height:2rpx;
  background:rgba(230,230,230,1);
  margin-top: 40rpx;
}
/* 我的头像 */
.bg_box .head{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin:0 auto;
}
.xinxi{
  /* float: left; */
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.xinxi .number{
  display: block;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  margin-top: 30rpx;
}
.xinxi .name{
  font-size:36rpx;
  color:rgba(255,255,255,1);
}
.chongzhi{
  width:140rpx;
  height:70rpx;
  border:1px solid #fff;
  border-radius:20rpx;
  font-size:28rpx;
  text-align:center;
  line-height:70rpx;
  color:#fff;
  position:absolute;
  right:47rpx;
  top:225rpx;
}
.exit{
  color: #fff;
  font-size: 30rpx;
  margin-top:20rpx;
}
.box_message{
  display: flex;
  justify-content: space-between;
  width:50%;
  position:absolute;
  top:20%;
  left:32%;
}
.box_message text{
  font-size:28rpx;
  font-weight:500;
  text-align: center;
  display: block;
  color:rgba(255,255,255,1);
}
.my_line{
  width: 1px;
  height: 30rpx;
  background: #fff;
  margin:20rpx 0;
}
.vie{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EEEEEE;
}
.dingdan{
  width: 50%;
  text-align: center;
  border-right: 1px solid #eee;
}
.dingdan:nth-child(2){
  border-right: 0;
}
.dingdan text{
  text-align: center;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.list-box{
  width: 90%;
  margin:0 auto;
  display: flex;
  justify-content: space-between;
}
.item_lix{
  width:164rpx;
  height:220rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 35rpx 0px rgba(0, 0, 0, 0.14);
  border-radius:20rpx;
  text-align: center;
  margin-top: 40rpx;
}
.item_lix image{
  margin-top: 50rpx;
}
.item_lix text{
  font-size:24rpx;
  color:rgba(102,102,102,1);
  display: block;
}