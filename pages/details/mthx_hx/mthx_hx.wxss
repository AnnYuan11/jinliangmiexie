/* pages/details/mthx_hx/mthx_hx.wxss */
.box{
  width: 94%;
  margin: 0 auto;
}
.message{
  margin-bottom: 20rpx;
}

.message text{
  font-size:30rpx;
  color: #333;
}
.message .name{
  display: block;
  font-weight:800;
}
.message .detail{
  color: #64B79C;
}
.top image{
  position: absolute;
  right: 0;
  top: 0;
}
.information_box{
  width: 100%;
  box-shadow: 0px 0px 10px 2px #eeeeee;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
}
.title{
  font-size:36rpx;
  font-weight:800;
  display: block;
  text-align: center;
  color:rgba(51,51,51,1);
}
.information{
  margin-top: 80rpx;
}
.list{
  width: 100%;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
.xm{
  font-size:30rpx;
  font-weight:800;
  color:rgba(51,51,51,1);
  display: inline-block;
  vertical-align: middle;
  margin-top: 8rpx;
  width: 20%;
}
.list input{
  width: 85%;
  border-bottom: 1px solid #EEEEEE;
  font-size: 24rpx;
}
.place{
  font-size:24rpx;
  color:#999;
}
.address{
  width: 85%;
  font-size:24rpx;
  color:rgba(51,51,51,1);
  border-bottom: 1px solid #eee;
}
.lists textarea{
  width: 100%;
  height: 200rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  border: 1px solid #EEEEEE;
  border-radius: 20rpx;
  margin-top: 40rpx;
  font-size:24rpx;
  color:#999;
}
.sub{
  width:259rpx;
  height:72rpx;
  background:rgba(100,183,156,1);
  border-radius:36rpx;
  font-size:36rpx;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}