}
.s_center{
  width: 50%;
}
.icon_list image{
  width: 120rpx;
}
.icon_list text{
  font-size:26rpx;
  color:#bcbcbc;
  display: block;
  line-height: 10rpx;
  margin-top:20rpx;
}
.line{
  width: 100%;
  height: 20rpx;
  background: #f4f4f4;
}
.lines{
  width: 4rpx;
