  /* 精彩评论 */
.title_bg{
  width: 100%;
  margin: 0 auto;
  height:120rpx;
  line-height: 120rpx;
  box-sizing: border-box;
  background: rgb(244, 244, 244);
  overflow: hidden;
}
.s_comment{
  width: 92%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto;
  border-radius: 100rpx;
  margin-top: 15rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #dddddd;
}
.title_bg text{
  font-size:34rpx;
  color:rgba(102,102,102,1);
  font-weight: 600;
}
.title_bg .more {
  font-size: 24rpx;
  font-weight: 400;
  color:#5e5e5e;
  float:right;
}
/* 洗鞋服务 */
.s_xxfw{
  width: 92%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.s_xxfw image{
  vertical-align: middle;
  margin-right: 20rpx;
}
.s_xxfw text{
  font-size: 34rpx;
  color: #000;
  font-weight: 600;
  vertical-align: middle;
}

