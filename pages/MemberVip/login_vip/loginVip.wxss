/* pages/MemberVip/login_vip/loginVip.wxss */
.login_bg{
  position: relative;
}
.login{
  width: 80%;
  margin:auto;
  position: absolute;
  top:37%;
  left: 0;
  right: 0;
  /* background: red; */
}
.phone{
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,0.6);
  border:2px solid rgba(40,163,148,1);
  color: #3A3E53;
  border-radius:20px;
}
.line{
  width: 1px;
  height:40rpx;
  background: #28A394;
}
.yzm{
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
}
.yzm input{
  width: 60%;
}
.obtain{
  padding-left: 20rpx;
  width: 170rpx;
  text-align: center;
}
/* 套餐 */
.combo_box{
  width: 80%;
  margin:auto;
  position: absolute;
  top:52%;
  left: 0;
  right: 0;
}
.combo{
  width:100%;
  height:98px;
  background:rgba(255,255,255,1);
  border-radius:10px;
  padding: 32rpx 48rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}
.active{
  border:3px solid #F8B93A;
}
.title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background:linear-gradient(90deg,rgba(250,214,82,1) 0%,rgba(248,185,58,1) 100%);
  border-radius:15px;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.amount{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.amount text{
  font-size:28rpx;
  color:rgba(34,158,139,1);
}
.amount text.price{
  color: #F8B93A;
}
/* 立刻购买 */
.buyNow{
  width:80%;
  height:100rpx;
  line-height: 100rpx;
  background:linear-gradient(90deg,rgba(250,214,82,1) 0%,rgba(248,185,58,1) 100%);
  box-shadow:0px 10px 20px rgba(9,52,45,0.43);
  border-radius:50rpx;
  position: absolute;
  top: 90%;
  left: 0;
  right: 0;
  font-weight:bold;
  font-size: 40rpx;
}
.mask{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  text-align: center;
  background:transparent; 
  float: right;
  margin-top: -47rpx;
  margin-right: 30rpx;
}