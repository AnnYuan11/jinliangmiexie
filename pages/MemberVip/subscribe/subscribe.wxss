.information_box{
  width: 85%;
  margin: 0 auto;
  margin-top: -14%;
  box-shadow: 0px 0px 10px 2px #e2e2e2;
  padding: 30rpx;
  box-sizing: border-box;
  z-index: 99999;
  position:relative;
  background:#fff;
  border-radius: 20rpx;
}
.information{
  margin-top: 20rpx;
}
.list_s{
  width: 100%;
  line-height: 89rpx;
  border-bottom: 1px solid #E6E6E6;
  overflow: hidden;
  display: flex;
  justify-content: space-between
}
.xm{
  font-size:30rpx;
  font-weight:800;
  color:#999999;
  display: inline-block;
  vertical-align: middle;
}
.r{
  font-size:24rpx;
  color:rgba(51,51,51,1);
}
.place{
  font-size:24rpx;
  color:#999;
}

.address{
  width: 85%;
  font-size:24rpx;
  color:rgba(51,51,51,1);
}
.lists textarea{
  width: 100%;
  height: 200rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  background: #EEEEEE;
  border-radius: 20rpx;
  margin-top: 40rpx;
  color: #000;
}
.sub{
  width:259rpx;
  height:72rpx;
  background:rgba(100,183,156,1);
  border-radius:36rpx;
  font-size:36rpx;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
.message{
  width: 100%;
}
.message image{
  vertical-align: middle;
}
.message text{
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-left: 8rpx;
}
.right text{
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.right image{
  vertical-align:middle;
  margin:0 14rpx;
}
.picker{
  font-size: 28rpx;
} 